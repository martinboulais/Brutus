<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="challengeViewModel"
            type="com.cpe.brutus.viewmodel.ChallengeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.SwipeIndicatorFragment">

        <ImageView
            android:id="@+id/swipe_indicator_left_arrow1"
            android:layout_width="@dimen/swipe_indicator_width"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/arrow"
            android:scaleX="-1"
            android:src="@drawable/ic_right_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/swipe_indicator_left_arrow2"
            android:layout_width="@dimen/swipe_indicator_width"
            android:layout_height="0dp"
            android:contentDescription="@string/arrow"
            android:scaleX="-1"
            android:src="@drawable/ic_right_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/swipe_indicator_left_arrow1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/swipe_indicator_left_arrow3"
            android:layout_width="@dimen/swipe_indicator_width"
            android:layout_height="0dp"
            android:contentDescription="@string/arrow"
            android:scaleX="-1"
            android:src="@drawable/ic_right_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/swipe_indicator_left_arrow2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/swipe_indicator_right_arrow1"
            android:layout_width="@dimen/swipe_indicator_width"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/arrow"
            android:src="@drawable/ic_right_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/swipe_indicator_right_arrow2"
            android:layout_width="@dimen/swipe_indicator_width"
            android:layout_height="0dp"
            android:contentDescription="@string/arrow"
            android:src="@drawable/ic_right_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/swipe_indicator_right_arrow1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/swipe_indicator_right_arrow3"
            android:layout_width="@dimen/swipe_indicator_width"
            android:layout_height="0dp"
            android:contentDescription="@string/arrow"
            android:src="@drawable/ic_right_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/swipe_indicator_right_arrow2"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>